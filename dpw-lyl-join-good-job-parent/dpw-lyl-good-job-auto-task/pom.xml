	<artifactId>auto-task</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>auto-task</name>
	<description>自动任务模块</description>
	<packaging>pom</packaging>
	<modules>
		<module>good-job-auto-task-dao</module>
		<module>good-job-auto-task-entity</module>
		<module>good-job-auto-task-server</module>
		<module>good-job-auto-task-service</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<!-- 指定该Main Class为全局的唯一入口 这里是启动类的地址 -->
					<mainClass>com.dpw.lyl.join.good.job.auto.task.server.GoodJobAutoTaskServerApplication</mainClass>
					<layout>ZIP</layout>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal><!--可以把依赖的包都打包到生成的Jar包中-->
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
